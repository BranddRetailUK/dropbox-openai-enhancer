# Server
# Railway sets PORT automatically.
PORT=3000

# Required: Dropbox webhook signature secret
DROPBOX_APP_SECRET=your_dropbox_app_secret

# Dropbox auth (choose one mode)
# Mode A (simple): static access token
DROPBOX_ACCESS_TOKEN=your_dropbox_access_token
# Mode B (recommended for Railway): auto-refresh auth
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_REFRESH_TOKEN=your_dropbox_refresh_token

# Optional: Dropbox API paths (not local filesystem paths)
DROPBOX_INPUT_PATH=/INPUT
DROPBOX_OUTPUT_PATH=/OUTPUT

# Required: OpenAI
OPENAI_API_KEY=your_openai_api_key

# Optional: Processing/output
# Latest explicit: gpt-image-1.5; rolling alias: chatgpt-image-latest
OPENAI_IMAGE_ENDPOINT=responses
OPENAI_IMAGE_MODEL=gpt-image-1.5
OPENAI_RESPONSES_MODEL=gpt-5-mini
OPENAI_IMAGE_QUALITY=medium
CONCURRENCY=4
# Output filename extension written to Dropbox (recommended: png)
OUTPUT_FORMAT=png
OUTPUT_SUFFIX=_ENHANCED
